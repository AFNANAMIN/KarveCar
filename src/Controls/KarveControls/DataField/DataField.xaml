<UserControl x:Class="KarveControls.DataField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarveControls"
             mc:Ignorable="d" 
             >
    <StackPanel Name="DataFieldContent" Orientation="Horizontal" Visibility="Visible">
        <StackPanel.Resources>
            <Style TargetType="{x:Type TextBox}" >
                <Style.Triggers>
                    <Trigger Property="IsReadOnly" Value="True">
                        <Trigger.Setters>
                            <Setter Property="Background" Value="CadetBlue" />
                        </Trigger.Setters>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </StackPanel.Resources>
        <TextBlock x:Name="LabelField" Text="{Binding Path=LabelContent}" Width="{Binding Path=LabelTextWidth}" Visibility="Hidden">
        </TextBlock>
        <TextBox x:Name="TextField" Text="{Binding Path=TextContent}" Width="{Binding Path=TextContentWidth}" 
                 Visibility="{Binding Path=IsVisible}" IsReadOnly="{Binding Path=IsReadOnly}">
        </TextBox>
    </StackPanel>
</UserControl>
