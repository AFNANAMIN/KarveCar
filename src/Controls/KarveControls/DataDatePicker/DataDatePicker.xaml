<UserControl x:Class="KarveControls.DataDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarveControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid x:Name="DataPickerContext">
        <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="LabelField" Text="{Binding Path=LabelText}" Width="{Binding Path=LabelTextWidth}" Visibility="Hidden"/>
        <DatePicker x:Name="DatePicker"  
                    Height="50"
                    SelectedDate="{Binding DateContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedDateChanged="DatePicker_OnSelectedDateChanged"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10,10,0,0">
        </DatePicker>
        </StackPanel>
    </Grid>
</UserControl>
