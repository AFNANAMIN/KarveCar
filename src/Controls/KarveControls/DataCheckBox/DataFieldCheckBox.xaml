<UserControl x:Class="KarveControls.DataFieldCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KarveControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Name="CheckBoxContent" Orientation="Horizontal" Visibility="Visible">
            <CheckBox Name="CheckBoxField" IsChecked="{Binding IsChecked}" IsEnabled="{Binding IsReadOnly}" 
                      Content="{Binding Content}">

            </CheckBox>
        </StackPanel>

    </Grid>
</UserControl>
