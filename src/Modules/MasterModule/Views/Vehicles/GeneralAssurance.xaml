<UserControl x:Class="MasterModule.Views.VehicleAssurance.GeneralAssurance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:kc="clr-namespace:KarveControls;assembly=KarveControls"
             xmlns:common="clr-namespace:MasterModule.Views.VehicleAssurance"
             xmlns:mockViewModels="clr-namespace:MasterModule.Views.VehicleAssurance.MockViewModels"

             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1000"
             d:DataContext="{d:DesignInstance Type=mockViewModels:VehicleAssuranceMockViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <WrapPanel>
        <kc:DualFieldSearchBox 
            LabelText="{Binding StringConstants.AssuranceCompany}"
            LabelTextWidth="100"
            TextContentFirstWidth="50"
            TextContentSecondWidth="150"
            IsReadOnlySecond="True"
            AssistDataFieldFirst="NUM_PROVEE"
            AssistDataFieldSecond="NOMBRE"
            DataFieldFirst="ciasegu"
            AssistProperties="Numero, Nombre, Direccion, Poblacion, Pais, Mail"
            MagnifierCommand="{Binding AssistCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            ItemChangedCommand="{Binding ItemChangedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                          
            AssistQuery="{Binding AssuranceQuery, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            AssistTableName="PROVEE1"
            ButtonImage=""
            Height="25" />
            <kc:DualFieldSearchBox                                               
            LabelText="{Binding StringConstants.Agent}"
            LabelTextWidth="100"
            AssistDataFieldFirst="NUM_PROVEE"
            AssistDataFieldSecond="NOMBRE"
            DataFieldFirst="agente"
            AssistProperties="Numero, Nombre, Direccion, Poblacion, Pais, Mail"
            AssistQuery="{Binding AgentQuery, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            IsReadOnlySecond="True"
            TextContentFirstWidth="50"
            TextContentSecondWidth="150"
            Height="25"
            MagnifierCommand="{Binding AssistCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            ItemChangedCommand="{Binding ItemChangedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                          
            ButtonImage=""/>
            <kc:DataArea                                               
            DataAreaTitle="Tipo Seguro"
            DataAreaWidth="200"
            kc:ControlExt.DataSource="{Binding DataObject,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            kc:ControlExt.DataSourcePath="tiposegu"
            />
            <kc:DataField 
                LabelText="Carta Verde"
                LabelTextWidth="100" 
                TextContentWidth="150"
                DataObject="{Binding DataObject,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                DataSourcePath="CARTAVERDE"
                DataFieldHeight="25"/>
            <kc:DataArea                                               
            DataAreaTitle="Observacion Seguro"
            DataAreaWidth="200"
            kc:ControlExt.DataSource="{Binding DataObject,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            kc:ControlExt.DataSourcePath="OBS_SEGURO"
            />
            <GroupBox Header="Poliza">
            <WrapPanel>
                    <kc:DataField x:Name="Poliza" 
                                  DataObject="{Binding DataObject,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"        
                                  DataSourcePath="TIPOREV"                  
                                  LabelText="{Binding StringConstants.InsurancePolicy}"
                                  LabelTextWidth="100"
                                  LabelVisible="True"
                                  TextContentWidth="100"
                                  DataFieldHeight="25"
                                              
                                              />
                    <kc:DataDatePicker DataDatePickerHeight="25" 
                                                  x:Name="FechaAlta" 
                                                  kc:ControlExt.DataSource="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  kc:ControlExt.DataSourcePath="ALTASEGU"
                                                  LabelText="{Binding StringConstants.EntryDate}"/>
                    <kc:DataDatePicker 
                        DataDatePickerHeight="25"
                        x:Name="FechaBaja"
                        kc:ControlExt.DataSource="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        kc:ControlExt.DataSourcePath="FBAJA_Segu"

                       LabelText="Fecha Baja"/>
                    <kc:DataDatePicker
                        DataDatePickerHeight="25"
                        x:Name="Vencimiento" 
                        kc:ControlExt.DataSource="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        kc:ControlExt.DataSourcePath="VTO_Segu"
                        LabelText="{Binding StringConstants.ExpirationDate}"/>

                    <kc:DataField DataFieldHeight="25"
                                             LabelTextWidth="80"
                                             LabelText="Franquicia"
                                             TextContentWidth="150"
                                             LabelVisible="True"
                                     />
                <kc:DataField 
                      DataObject="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              
                    DataSourcePath="PRIMA"
                  
                    DataFieldHeight="25" 
                    LabelTextWidth="80"
                    LabelText="{Binding StringConstants.Prima}"
                  
                    ItemChangedCommand="{Binding ItemChangedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                 
                    TextContentWidth="150"
                    />
                    <kc:DataField 
                    DataFieldHeight="25" 
                    LabelTextWidth="80"
                    LabelText="Extorno"
                    kc:ControlExt.DataSource="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    kc:ControlExt.DataSourcePath="FBAJA_Segu"
                        ItemChangedCommand="{Binding ItemChangedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                 
                    TextContentWidth="150"
                    />
                    <kc:DataField 
                    DataFieldHeight="25" 
                    LabelTextWidth="80"
                    LabelText="Pendiente"
                    ItemChangedCommand="{Binding ItemChangedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                 
                    TextContentWidth="150"
                    />
                    <kc:DataField 
                    DataFieldHeight="25" 
                    LabelTextWidth="100"
                    LabelText="Valor para Seguro"
                    ItemChangedCommand="{Binding ItemChangedCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                 
                    TextContentWidth="200"
                    />
                </WrapPanel>

            </GroupBox>
                   </WrapPanel>
    </Grid>
</UserControl>
