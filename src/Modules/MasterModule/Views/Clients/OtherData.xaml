<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MasterModule.Views.Clients"
             xmlns:KarveControls="clr-namespace:KarveControls;assembly=KarveControls" xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="MasterModule.Views.Clients.OtherData"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900">
    <Grid>
        <GroupBox Header="Facturacion">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <KarveControls:DataField LabelText="Riesgo" TextContentWidth="100" LabelTextWidth="100" Height="25"/>
                    <KarveControls:DataField LabelText="$"  Margin="5,0,0,5" TextContentWidth="300" Height="25"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <KarveControls:DataField LabelText="Importe Pendiente" TextContentWidth="100" Height="25" Margin="5,0,0,5"/>
                    <KarveControls:DataField LabelText="Plazo Pago" TextContentWidth="100" Height="25" Margin="5,0,0,5"/>
                    <KarveControls:DataDatePicker LabelText="Dia Pago" Height="40" Width="200" />

                </StackPanel>
                <KarveControls:DualFieldSearchBox x:Name="FormaDeCobro" 
                                           LabelText="Forma de cobros:" 
                                          Height="25" 
                                          Margin="0,5,0,0"
                                          AssistDataFieldFirst="NUM_PROVEE"
                                          AssistDataFieldSecond="NOMBRE"
                                          AssistTableName="{Binding AssuranceKind, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsReadOnlySecond="True"
                                          AssistQuery="{Binding AssistQuery, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          DataFieldFirst="{Binding AssuranceCompanyPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          AssistProperties="Codigo,Nombre"
                                          ItemChangedCommand="{Binding ItemChangedCommand}"
                                          MagnifierCommand="{Binding MagnifierCommand}" 
                                          DataSource="{Binding DataObjectValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SourceView="{Binding AssuranceCompanyList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          LabelTextWidth="100"
                                          TextContentFirstWidth="60" 
                                          TextContentSecondWidth="150"
                                          ButtonImage=""/>
                <KarveControls:DataField LabelText="Cuenta" 
                                         LabelTextWidth="100"
                                         TextContentWidth="300" Height="25" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <KarveControls:DataField LabelTextWidth="100" 
                                             LabelText="Descuento" 
                                             TextContentWidth="100" Height="25" Margin="5,0,0,5"/>
                    <TextBlock Text="Saldo" Margin="5,0,0,0" Width="49.483"></TextBlock>
                    <syncfusion:CurrencyTextBox CurrencyGroupSeparator="," CurrencyDecimalSeparator="." CurrencySymbol="" Height="23" TextWrapping="Wrap" 
                                                Text="Saldo" Value="1.00" VerticalAlignment="Stretch" Width="119"/>

                                    </StackPanel>
                <KarveControls:DualFieldSearchBox x:Name="CuentaContable" 
                                           LabelText="Cuenta Contable" 
                                          Height="25" 
                                          Margin="0,5,0,0"
                                          AssistDataFieldFirst="NUM_PROVEE"
                                          AssistDataFieldSecond="NOMBRE"
                                          AssistTableName="{Binding AssuranceKind, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          IsReadOnlySecond="True"
                                          AssistQuery="{Binding AssistQuery, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          DataFieldFirst="{Binding AssuranceCompanyPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          AssistProperties="Codigo,Nombre"
                                          ItemChangedCommand="{Binding ItemChangedCommand}"
                                          MagnifierCommand="{Binding MagnifierCommand}" 
                                          DataSource="{Binding DataObjectValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          SourceView="{Binding AssuranceCompanyList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                          LabelTextWidth="100"
                                          TextContentFirstWidth="60" 
                                          TextContentSecondWidth="150"
                                          ButtonImage=""/>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
