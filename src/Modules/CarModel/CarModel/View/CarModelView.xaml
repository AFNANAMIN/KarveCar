                                                             LabelTextWidth="100"
                                                             TextContentWidth="100"
                                                             TextContent="{Binding DataObject.PCOMPRA, Mode=TwoWay, 
                                                                        ValidatesOnDataErrors=True, 
                                                                        ValidatesOnNotifyDataErrors=True, 
                                                                        ValidatesOnExceptions=True, 
                                                                        UpdateSourceTrigger=PropertyChanged}"
                                                             DataObject="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Height="30"

                                                             ItemChangedCommand="{Binding ItemChangedCommand}"
                                                             LabelVisible="True" />

                                    <KarveControls:DataField x:Name="SellingPrice"
                                                             LabelText="Precio Venta"
                                                             TextContentWidth="100"
                                                             TextContent="{Binding DataObject.PVP, Mode=TwoWay, 
