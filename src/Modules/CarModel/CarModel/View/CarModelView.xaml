                                                                        ValidatesOnDataErrors=True, 
                                                                        ValidatesOnNotifyDataErrors=True, 
                                                                        ValidatesOnExceptions=True, 
                                                                        UpdateSourceTrigger=PropertyChanged}"
                                                             DataObject="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Height="30"

                                                             ItemChangedCommand="{Binding ItemChangedCommand}"
                                                             LabelVisible="True" />
                                    <KarveControls:DataField x:Name="Taxes"
                                                             LabelText="Impuestos"
                                                             TextContentWidth="100"
                                                             TextContent="{Binding DataObject.IMPUESTO, Mode=TwoWay, 
                                                                        ValidatesOnDataErrors=True, 
                                                                        ValidatesOnNotifyDataErrors=True, 
                                                                        ValidatesOnExceptions=True, 
                                                                        UpdateSourceTrigger=PropertyChanged}"

                                                             DataObject="{Binding DataObject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Height="30"

                                                             LabelTextWidth="100"
                                                             ItemChangedCommand="{Binding ItemChangedCommand}"
                                                             LabelVisible="True" />

                                </StackPanel>
                                <KarveControls:DataArea
