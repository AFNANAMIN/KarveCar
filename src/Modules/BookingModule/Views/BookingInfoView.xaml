                                                    <Image Source="/KarveControls;component/Images/office.png" 
                                                           Margin="2" 
                                                           Stretch="Uniform" 
                                                           Width="12"/>

                                                    <TextBlock Text="{Binding Codigo}" Margin="5 2"/>
                                                    <TextBlock Text="{Binding Nombre}" Margin="5 2"/>

                                                </StackPanel>

                                            </DataTemplate>

                                        </Syncfusion:SfTextBoxExt.AutoCompleteItemTemplate>


