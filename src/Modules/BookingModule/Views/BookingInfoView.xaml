            <TextBlock DockPanel.Dock="Right" HorizontalAlignment="Left" Text="Reservas" FontSize="24"
                       Foreground="White" />
        </DockPanel>

        <TabControl Grid.Row="1" Grid.ColumnSpan="2" >

            <TabItem Header="{Binding lgeneral, Source={StaticResource ResourceLanguage}}">

