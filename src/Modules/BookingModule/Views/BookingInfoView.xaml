                                  Style="{StaticResource SfFieldErrorStyle}"
                                 karveControls:ControlExt.ItemChangedCommand="{Binding ItemChangedCommand}"
                                 Height="30" x:Name="rENTAL1_RES1" Width="Auto" />
                        </StackPanel>
                        <StackPanel Grid.Column="3">
