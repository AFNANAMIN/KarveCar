<UserControl x:Class="HelperModule.Views.VehicleOwner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelperModule.Views"
             xmlns:karveControls="clr-namespace:KarveControls;assembly=KarveControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary Source="pack://application:,,,/HelperModule;component/Template/DataTemplate.xaml" x:Key="DataTemplate"/>
            </ResourceDictionary>
        </Grid.Resources>
        
        <karveControls:HelperButtonControl  
            ExitCommand="{Binding ExitCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            HelpCommand="{Binding HelpCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            SaveCommand="{Binding SaveCommand}"></karveControls:HelperButtonControl>
    </Grid>
</UserControl>
